<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.android.black">

    <application
        android:name="org.android.black.base.MainApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@android:drawable/ic_btn_speak_now"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar"
        tools:replace="name,icon,label,theme,allowBackup">
        <activity
            android:name="org.android.black.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- 上下滑动隐藏header和footer的QuickReturn-->
        <activity
            android:name="widget.view.quickreturn.demo.QuickReturnActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name="widget.view.quickreturn.demo.QuickReturnTabActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name="widget.view.quickreturn.demo.QuickReturnFragActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <!-- 上下滑动隐藏header和footer的QuickReturn-->

        <!-- 页面切换效果-->
        <activity
            android:name="org.android.black.pageswitch.MainPageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name="org.android.black.pageswitch.SubPageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            />
        <!-- 页面切换效果-->
    </application>

</manifest>
