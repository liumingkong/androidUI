<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_common_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/qr_twitter_cv"
                style="@style/itemCardView">

                <TextView
                    style="@style/itemTextView"
                    android:text="Twitter" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/qr_facebook_cv"
                style="@style/itemCardView">

                <TextView
                    style="@style/itemTextView"
                    android:text="Facebook" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/qr_google_cv"
                style="@style/itemCardView">

                <TextView
                    style="@style/itemTextView"
                    android:text="Google Plus" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/qr_listview_cv"
                style="@style/itemCardView">

                <TextView
                    style="@style/itemTextView"
                    android:text="ListView Layout" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/qr_scrollview_cv"
                style="@style/itemCardView">

                <TextView
                    style="@style/itemTextView"
                    android:text="ScrollView" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/qr_webview_cv"
                style="@style/itemCardView">

                <TextView
                    style="@style/itemTextView"
                    android:text="Webview Layout" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>